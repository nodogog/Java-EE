<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="3.0">

    <servlet-mapping>
        <servlet-name>student</servlet-name>
        <url-pattern>/Students</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>student</servlet-name>
        <servlet-class>ge.digitaledu.sms.controller.StudentController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>lesson</servlet-name>
        <url-pattern>/Lesson</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>lesson</servlet-name>
        <servlet-class>ge.digitaledu.sms.controller.LessonController</servlet-class>
    </servlet>
</web-app>

